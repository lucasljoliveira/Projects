<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Data nasc</th>
      <th>Sexo</th>
      <th>Telefone</th>
      <th>Cor</th>
      <th>Grau escolaridade</th>
      <th>Nome pai</th>
      <th>Nome mae</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.data_nasc %></td>
        <td><%= pessoa.sexo %></td>
        <td><%= pessoa.telefone %></td>
        <td><%= pessoa.cor %></td>
        <td><%= show_escolaridade(pessoa.grau_escolaridade) %></td>
        <td><%= pessoa.nome_pai %></td>
        <td><%= pessoa.nome_mae %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

